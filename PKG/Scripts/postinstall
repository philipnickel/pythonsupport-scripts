#!/bin/bash
# Simple postinstall script for debugging

echo "=== DTU Python Environment PKG Installation ==="
logger -t "DTU-Python-PKG" "Simple postinstall script starting"

# Just log what we have
echo "Checking installation directory..."
ls -la /usr/local/bin/dtu_orchestrator.sh || echo "Orchestrator not found"
ls -la /usr/local/share/dtu-python-env/ || echo "Bundle directory not found"

logger -t "DTU-Python-PKG" "Simple postinstall script completed"
echo "=== Simple Installation Test Completed ==="

exit 0